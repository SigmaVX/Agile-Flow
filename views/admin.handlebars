{{!-- Temp Add New Topic Form --}}
  <div class="container-fluid">
    <div class="row jumbotron">
        <h1 class="col-12">Create A New Topic</h1>
        <form>
            <div class="form-group">
                <label for="topic_title">Enter Topic Title - Up To 100 Characters</label>
                <input type="text" class="form-control" id="topic_title" placeholder="Title">
            </div>
            <div class="form-group">
                <label for="topic_body">Enter Description - Up To 250 Characters</label>
                <input type="text" class="form-control" id="topic_body" placeholder="Description">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="add-topic-btn">Submit</button>  
            </div>
        </form>
    </div>
  </div>


    {{!-- Open Topics --}}
    <div class="container-fluid">
        <div class="row text-center closed-topics">
            <h2 class="col-12">Open Topics</h2>
            {{#each open}}
                <div class="card col-12">
                    <h5 class="card-title col-12">{{this.topic_title}}</h5>
                    <p class="col-12">{{this.topic_body}}</p>
                    <div class="row">
                        <button class="col-md-6 col-12 btn" id="admin-edit-btn">Edit</button>
                        <button class="col-md-6 col-12 btn" id="admin-delete-btn">Delete</button>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

    {{!-- Pending Topics --}}
    <div class="container-fluid">
        <div class="row text-center closed-topics">
            <h2 class="col-12">Closed Topics</h2>
            {{#each pending}}
                <div class="card col-12">
                    <h5 class="card-title col-12">{{this.topic_title}}</h5>
                    <p class="col-12">{{this.topic_body}}</p>
                    <div class="row">
                        <button class="col-md-6 col-12 btn" id="admin-edit-btn">Edit</button>
                        <button class="col-md-6 col-12 btn" id="admin-delete-btn">Delete</button>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

    {{!-- Closed Topics --}}
    <div class="row text-center closed-topics">
        <h2 class="col-12">Closed Topics</h2>
        {{#each closed}}
            <div class="card col-3">
            <iframe class="card-img-top" src={{this.topic_video}} alt="Video For Topic"></iframe>
            <div class="card-body">
                <h5 class="card-title">{{this.topic_title}}</h5>
                <button class="btn btn-block" id="admin-view-details">View Details</button>
                <button class="btn btn-block" id="admin-edit-btn">Edit</button>
                <button class="btn btn-block" id="admin-delete-btn">Delete</button>
            </div>
            </div>
        {{/each}}
    </div>