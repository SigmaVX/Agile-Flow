                    <button type="button" class="btn btn-block" data-dismiss="modal" id="confirm-delete-btn">Delete Topic</button><br>
                    <button type="button" class="btn btn-block" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
