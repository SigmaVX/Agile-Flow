<h1 class="d-flex display-4 justify-content-center">Helpflow</h1>

<div class="row mb-2">
  <div class="col-xs-12 col-sm-5">
    <h2 class="d-flex display-5 justify-content-center">Users List</h2>
    <section class="row">
      <table class="col-xs-12 col-sm-12 mb-1">
      {{#each users}}
          {{> users/user-block id=this.id user_name=this.user_name user_rank=this.user_rank user_votes=this.user_votes}}
      {{/each}}
      </table>
    </section>
  </div>

  <div class="col-xs-12 offset-sm-1 col-sm-6">
    <h2 class="d-flex display-5 justify-content-center">Topics</h2>
    <section class="row">
      <table class="col-xs-12 col-sm-12 burger-tbl devoured-tbl mb-1">
        {{#each topics}}
            {{> topics/topic-block id=this.id topic_title=this.topic_title topic_state=this.topic_state topic_interest=this.topic_interest topic_votes=this.topic_votes topic_answer=this.topic_answer topic_answer_url=this.topic_answer_url}}
        {{/each}}
      </table>
    </section>
  </div>

</div>

<div class="row">
  <section class="col-xs-12 col-sm-6">
      <button class="btn-lg btn-primary" id="insert-seeds-btn">Insert Seed Data</button>\
  </section>
</div>
